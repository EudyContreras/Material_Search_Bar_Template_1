<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/action_bar_size"
    tools:context=".fragments.SearchResultFragment">

    <View
        android:id="@+id/fragment_search_result_container_background"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_shape_round_bottom"
        android:backgroundTint="@color/colorPrimaryDark">
    </View>

    <include
        android:id="@+id/fragment_search_result_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/fragment_search_result_content"/>
</FrameLayout>